import { App } from "aws-cdk-lib";
import "source-map-support/register.js";
import { ApiStack } from "./api-stack.js";

const app = new App();

new ApiStack(app, "{{{apiName}}}-uat", {
    env: {
        account: "{{{accountId}}}",
        region: "{{{region}}}",
    },
    certificateArn: "{{{uatCertificateArn}}}",
{{#if (has features "ssm")}}
    ssmPrefix: "{{{apiName}}}/uat",
{{/if}}
});

app.synth();
